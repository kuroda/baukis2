<% @title = "メッセージへの回答" %>
<h1><%= @title %></h1>

<div id="generic-form" class="table-wrapper">
  <%= form_with model: @reply,
    url: confirm_customer_message_reply_path(@message) do |f| %>
    <%= render "form", f: f %>
    <div class="buttons">
      <%= f.submit "確認画⾯へ進む" %>
      <%= link_to "キャンセル", :customer_messages %>
    </div>
  <% end %>
  <%= render "message" %>
</div>