<%= markup do |m|
  p = StaffMemberFormPresenter.new(f, self)
  m << p.notes
  m << p.text_field_block(:email, "メールアドレス", size: 32, required: true)
  m << p.password_field_block(:password, "パスワード", size: 32, required: true)
  m << p.full_name_block(:family_name, :given_name, "氏名", required: true)
  m << p.full_name_block(:family_name_kana, :given_name_kana, "フリガナ",
    required: true)
  m << p.date_field_block(:start_date, "入社日", required: true)
  m << p.date_field_block(:end_date, "退職日")
  m << p.suspended_check_box
end %>
